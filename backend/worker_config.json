{
  "workers": [
    {
      "name": "Openshift Worker",
      "type": "OpenShift",
      "config": {
        "namespace": "default",
        "job_template": {
          "apiVersion": "batch/v1",
          "kind": "Job",
          "metadata": {
            "generateName": "task-"
          },
          "spec": {
            "template": {
              "spec": {
                "containers": [
                  {
                    "name": "task",
                    "image": "busybox",
                    "command": ["echo", "Hello from Kubernetes!"]
                  }
                ],
                "restartPolicy": "Never"
              }
            }
          }
        }
      }
    },
    {
      "name": "Docker Worker",
      "type": "Docker",
      "config": {
        "image": "busybox",
        "command": "echo 'Hello from Docker!'",
        "environment": {
          "ENV_VAR": "value"
        },
        "volumes": {
          "/host/path": {
            "bind": "/container/path",
            "mode": "ro"
          }
        }
      }
    }
  ]
}
